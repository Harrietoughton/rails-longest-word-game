<h1>New Game:</h1>
<h1><%= @letters %></h1>

<h2>What is the longest word you can find?</h2>
<form action="/score" method="POST">
  <input type="text" name="word" placeholder="enter your guess:">
  <input type="submit" value="attempt">
  <input type="hidden" name="array" value=<%= @letters %>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
